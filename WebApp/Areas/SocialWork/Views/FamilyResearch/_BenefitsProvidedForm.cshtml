@model WebApp.Areas.SocialWork.Models.BenefitsProvidedViewModel


<div class="modal fade" id="benefitsProvidedModalWindow" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Agregar Apoyos y Servicios</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="container">
                        <div class="row">
                            <div class="col-12">

                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>Institucion</label>
                                        <input id="benefitsProvidedDetails-Institucion" type="text" asp-for="Institucion" class="form-control" />
                                        <span asp-validation-for="Institucion" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>Apoyo Recibido</label>
                                        <input id="benefitsProvidedDetails-ApoyoRecibido" type="text" asp-for="ApoyoRecibido" class="form-control" />
                                        <span asp-validation-for="ApoyoRecibido" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>Monto</label>
                                        <input id="benefitsProvidedDetails-Monto" type="text" asp-for="Monto" class="form-control" />
                                        <span asp-validation-for="Monto" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>Periodo</label>
                                        <input id="benefitsProvidedDetails-Periodo" type="text" asp-for="Periodo" class="form-control" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="benefitsProvidedbtnyes" data-save="modal-benefitsProvided" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>



