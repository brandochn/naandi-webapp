@model List<WebApp.Areas.SocialWork.Models.BenefitsProvidedViewModel>

<div class="row">
    <div class="col">
        <table id="BenefitsProvidedTableId" class="table table-responsive-lg table-hover">
            <thead class="">
                <tr>
                    <th style="display:none">key</th>
                    <th>Instituci√≥n y/o Dependencia</th>
                    <th>Apoyo y/o servicio recibido</th>
                    <th>Monto</th>
                    <th>Periodo</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td style="display:none">@Html.DisplayFor(Model=> item.Key)</td>
                            <td>@Html.DisplayFor(model => item.Institucion)</td>
                            <td>@Html.DisplayFor(model => item.ApoyoRecibido)</td>
                            <td>@Html.DisplayFor(model => item.Monto)</td>
                            <td>@Html.DisplayFor(model => item.Periodo)</td>
                            <td>
                                <input type="button" value="Eliminar" class="btn btn-danger">
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>